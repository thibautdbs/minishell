# ##############################################################################
# ## VARS                                                                      #
# ##############################################################################

################################################################################
### TARGETS

NAME		:=	minishell

################################################################################
### DIRECTORIES

SRC			:=	src
BUILD		:=	.build
INCLUDE		:=	include

################################################################################
### FLAGS

CC			=	clang
CFLAGS		=	-Wall -Werror -Wextra -O3
CPPFLAGS	=	-MMD -MP -I $(INCLUDE)
LDLIBS      =

################################################################################
### FILES

SRCS		:=

OBJS		=	$(SRCS:$(SRC)/%.c=$(BUILD)/%.o)
DEPS		=	$(SRCS:$(SRC)/%.c=$(BUILD)/%.d)
	
# ##############################################################################
# ## RULES                                                                     #
# ##############################################################################

all:
	@$(ECHO) "$(MAGENTA)Building objects files!$(NC)"
	@$(MAKE) -j $(OBJS)
	@$(ECHO)
	@$(ECHO) "$(MAGENTA)Building $(NAME)!$(NC)"
	@$(MAKE) -j $(NAME)
.PHONY: all

################################################################################
### minishell

$(NAME): $(OBJS)
	@$(DIRDUP)
	$(CC) $(OBJS) $(LDLIBS) -o $(NAME)

$(BUILD)/%.o: $(SRC)/%.c
	@$(DIRDUP)
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $< -o $@

-include $(DEPS)

# ##############################################################################
# ## UTILS                                                                     #
# ##############################################################################

################################################################################
### RULES

clean:
	@$(ECHO) "$(MAGENTA)removing build files!$(NC)"
	$(RM) -r $(BUILD)
.PHONY: clean

fclean:
	@$(ECHO) "$(MAGENTA)cleaning everything!$(NC)"
	$(RM) -r $(BUILD)
	$(RM) $(NAME)
.PHONY: fclean

re: fclean all
.PHONY: re

################################################################################
### ALIASES

RM			:=	rm -f
ECHO		:=	echo -e
DIRDUP		 =	mkdir -p $(@D)

################################################################################
### VARS

SHELL		:=	/bin/bash
MAKEFLAGS	:=	--no-builtin-rules			\
				--no-print-directory		\

NC			:=	\\e[0m
MAGENTA		:=	\\e[95m

-include dev.mk
